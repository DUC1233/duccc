@model IList<Fact>
<!-- Facts Start -->
<div class="container-xxl bg-primary facts my-5 py-5 wow fadeInUp"
     data-wow-delay="0.1s">
    <div class="container py-5">
        <div class="row g-4">
            @foreach (var fact in Model.OrderBy(f=>f.FactID) )
            {
            <div class="col-md-6 col-lg-3 text-center wow fadeIn"
                 data-wow-delay="0.1s">
                <i class="@fact.Icon fa-3x text-primary mb-3"></i>
                <h1 class="text-white mb-2" data-toggle="counter-up">@fact.Amount</h1>
                <p class="text-white mb-0">@fact.FactName</p>
            </div>
                
            }
            
        </div>
    </div>
</div>
<!-- Facts End -->